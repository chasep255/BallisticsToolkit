CompileFlags:
  Add:
    - -std=c++17
    - -Wall
    - -Wextra
    # Project includes
    - -I${workspaceFolder}/include
    # Emscripten includes (C++ stdlib MUST come before C stdlib)
    - -isystem/home/chase/emsdk/upstream/emscripten/system/lib/libcxx/include
    - -isystem/home/chase/emsdk/upstream/emscripten/system/include
    - -isystem/home/chase/emsdk/upstream/emscripten/cache/sysroot/include
    # Emscripten preprocessor define
    - -DEMSCRIPTEN
    - -D__EMSCRIPTEN__
  Remove:
    # Remove Emscripten-specific flags that clangd doesn't understand
    - -fwasm-exceptions
    - --target=wasm32-unknown-emscripten
    
  CompilationDatabase: ""  # Ignore compile_commands.json (it's for Emscripten)

# Manually specify include paths
Index:
  Background: Build

Diagnostics:
  UnusedIncludes: None
  MissingIncludes: None
  Suppress:
    - "__GLIBC_PREREQ"
    - "Too many errors"
    - "is_copy_constructible"
    - "matching constructor"
    - "matching function"
    - "matching member function"
    - "member named 'value'"
    - "Out-of-line definition"
    - "viable conversion"
    - "IntersectionResult"
    - "unresolved using declaration"
    - "didn't find libc"
  ClangTidy:
    Remove:
      - misc-*
      - modernize-*


